@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Author List</h2>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth.ToString("dd MMM yyyy")</td>
                <td>
                    <a href="/Author/Details/@author.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

